---
const { title = 'La Porte Alchemy | Garden Excellence' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/branding/favicons/favicon_white.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Manrope:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --green: #008037;
        --ink: #0b120e;
        --ink-soft: #111a15;
        --mist: #f4f1e8;
        --stone: #d7cdbb;
        --sand: #bca887;
        --line: rgba(255, 255, 255, 0.08);
        --shadow: 0 25px 60px rgba(5, 10, 7, 0.45);
      }
      body {
        font-family: 'Manrope', sans-serif;
        background: var(--ink);
        color: #dde4d8;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: 'Cormorant Garamond', serif;
        letter-spacing: -0.02em;
      }
      .lux-container {
        width: min(1200px, 92%);
        margin: 0 auto;
      }
      .eyebrow {
        font-size: 0.7rem;
        letter-spacing: 0.36em;
        text-transform: uppercase;
        font-weight: 600;
      }
      .btn-primary {
        background: var(--green);
        color: #f4f1e8;
        box-shadow: 0 18px 35px rgba(0, 128, 55, 0.35);
      }
      .btn-secondary {
        background: rgba(12, 18, 15, 0.55);
        border: 1px solid rgba(244, 241, 232, 0.25);
        color: #f4f1e8;
      }
      .glass-panel {
        background: rgba(12, 18, 15, 0.72);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: var(--shadow);
        backdrop-filter: blur(16px);
      }
      .reveal {
        opacity: 0;
        transform: translateY(18px);
        animation: fadeUp 0.8s ease forwards;
      }
      .delay-1 {
        animation-delay: 0.1s;
      }
      .delay-2 {
        animation-delay: 0.2s;
      }
      .delay-3 {
        animation-delay: 0.3s;
      }
      .delay-4 {
        animation-delay: 0.4s;
      }
      @keyframes fadeUp {
        from {
          opacity: 0;
          transform: translateY(18px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body class="bg-[#0b120e] text-[#dde4d8] antialiased">
    <slot />
  </body>
</html>
