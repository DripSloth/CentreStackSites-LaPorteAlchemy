---
const navLinks = ['Services', 'Our Work', 'Process', 'About'];
---
<header
  id="site-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-transparent"
>
  <div class="lux-container flex justify-between items-center py-5">
    <a href="#home" aria-label="La Porte Alchemy Home">
      <img src="/logo-white.png" alt="La Porte Alchemy Logo" class="h-10 w-auto" />
    </a>
    <nav class="hidden lg:flex items-center space-x-10 text-xs uppercase tracking-[0.28em]">
      {navLinks.map((link) => (
        <a
          href={`#${link.toLowerCase().replace(' ', '-')}`}
          class="text-[#e4eadf]/70 hover:text-[#f4f1e8] transition-colors duration-300"
        >
          {link}
        </a>
      ))}
    </nav>
    <a
      href="#contact"
      class="hidden lg:inline-flex items-center gap-2 px-6 py-3 rounded-full text-xs font-semibold uppercase tracking-[0.26em] btn-primary transition-all duration-300 hover:translate-y-[-2px]"
    >
      Book a Consultation
    </a>
    <button class="lg:hidden text-white" aria-label="Open menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');

  const handleScroll = () => {
    if (!header) return;
    if (window.scrollY > 10) {
      header.classList.add(
        'bg-[#0b120e]/90',
        'backdrop-blur-xl',
        'border-b',
        'border-white/10',
        'shadow-[0_18px_40px_rgba(0,0,0,0.35)]'
      );
      header.classList.remove('bg-transparent');
    } else {
      header.classList.remove(
        'bg-[#0b120e]/90',
        'backdrop-blur-xl',
        'border-b',
        'border-white/10',
        'shadow-[0_18px_40px_rgba(0,0,0,0.35)]'
      );
      header.classList.add('bg-transparent');
    }
  };

  handleScroll();
  window.addEventListener('scroll', handleScroll);
</script>
