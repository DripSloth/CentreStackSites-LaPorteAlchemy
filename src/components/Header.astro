---
import logoWhite from '../assets/branding/logos/logo-white-on-transparent-landscape.png';
const navLinks = ['Services', 'Our Work', 'Process', 'About'];
---
<header
  id="site-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
  <div class="container flex justify-between items-center py-5 lg:py-6">
    <a href="#home" aria-label="La Porte Alchemy Home" class="z-10">
      <img src={logoWhite.src} alt="La Porte Alchemy Logo" class="h-10 lg:h-12 w-auto" />
    </a>
    <nav class="hidden lg:flex items-center gap-8">
      {navLinks.map((link) => (
        <a
          href={`#${link.toLowerCase().replace(' ', '-')}`}
          class="text-sm font-medium text-white/90 hover:text-white transition-colors duration-300 uppercase tracking-wider"
        >
          {link}
        </a>
      ))}
    </nav>
    <a
      href="#contact"
      class="hidden lg:inline-flex items-center btn-primary text-sm"
    >
      Get Started
    </a>
    <button
      id="mobile-menu-btn"
      class="lg:hidden text-white p-2 z-10"
      aria-label="Open menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <div id="mobile-menu" class="lg:hidden fixed inset-0 bg-neutral-900 z-40 transform translate-x-full transition-transform duration-300">
    <div class="container pt-24 pb-8">
      <nav class="flex flex-col gap-6">
        {navLinks.map((link) => (
          <a
            href={`#${link.toLowerCase().replace(' ', '-')}`}
            class="text-lg font-medium text-white uppercase tracking-wider"
          >
            {link}
          </a>
        ))}
        <a href="#contact" class="btn-primary mt-4 w-fit">
          Get Started
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  const handleScroll = () => {
    if (!header) return;
    if (window.scrollY > 20) {
      header.style.backgroundColor = 'rgba(10, 15, 12, 0.95)';
      header.style.backdropFilter = 'blur(10px)';
      header.style.boxShadow = '0 4px 16px rgba(0, 0, 0, 0.2)';
    } else {
      header.style.backgroundColor = 'transparent';
      header.style.backdropFilter = 'none';
      header.style.boxShadow = 'none';
    }
  };

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('translate-x-full');
    });

    mobileMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('translate-x-full');
      });
    });
  }

  handleScroll();
  window.addEventListener('scroll', handleScroll);
</script>
