---
const projects = [
  {
    id: 1,
    imageUrl: 'https://picsum.photos/seed/riverfront-terrace/1400/1200',
    title: 'Riverfront Terrace',
    category: 'Design + Build',
    span: 'lg:col-span-2 lg:row-span-2',
    description:
      'A layered entertaining terrace with custom stonework, a glowing water feature, and sculpted planting to frame panoramic river views.',
  },
  {
    id: 2,
    imageUrl: 'https://picsum.photos/seed/ascot-courtyard/900/1200',
    title: 'Ascot Courtyard',
    category: 'Estate Masterplanning',
    span: 'lg:row-span-2',
    description:
      'An internal courtyard reimagined with a spa, feature tree, and layered lighting to create a private sanctuary in the city.',
  },
  {
    id: 3,
    imageUrl: 'https://picsum.photos/seed/botanical-entry/900/700',
    title: 'Botanical Entry',
    category: 'Botanical Styling',
    span: '',
    description:
      'A refined arrival experience with curated planting, bronze accents, and a sculptural water blade to anchor the entry sequence.',
  },
  {
    id: 4,
    imageUrl: 'https://picsum.photos/seed/pool-pavilion/1200/700',
    title: 'Pool Pavilion',
    category: 'Outdoor Architecture',
    span: 'lg:col-span-2',
    description:
      'A resort-inspired pavilion with outdoor kitchen, cantilevered shade, and immersive greenery for effortless hosting.',
  },
  {
    id: 5,
    imageUrl: 'https://picsum.photos/seed/hillside-lawn/800/700',
    title: 'Hillside Lawn',
    category: 'Construction',
    span: '',
    description:
      'Terraced lawns, stone steps, and fine-grain planting that reshape a steep site into a calm, usable retreat.',
  },
];
---
<section id="our-work" class="relative py-20 md:py-32 bg-[#0d1310] text-[#f4f1e8] overflow-hidden">
  <div class="absolute -top-24 left-10 h-64 w-64 rounded-full bg-[#008037]/20 blur-[120px]"></div>
  <div class="lux-container">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-8 mb-14">
      <div class="max-w-2xl">
        <p class="eyebrow text-[#d7cdbb]">Selected work</p>
        <h2 class="text-4xl md:text-5xl font-semibold mt-4">Landscapes curated for Carina Heights estates.</h2>
        <p class="text-lg text-[#cdd7cb] mt-4">
          A refined portfolio spanning resort pools, layered garden rooms, and architectural outdoor living spaces.
        </p>
      </div>
      <a
        href="#contact"
        class="btn-secondary inline-flex items-center justify-center px-7 py-3 rounded-full text-xs font-semibold uppercase tracking-[0.26em] transition-transform duration-300 hover:translate-y-[-2px]"
      >
        Start a project
      </a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 auto-rows-[220px] md:auto-rows-[260px] gap-6">
      {projects.map((project) => (
        <button
          type="button"
          class={`relative rounded-[28px] overflow-hidden group ${project.span} cursor-pointer text-left border border-white/10 shadow-[0_25px_60px_rgba(5,10,7,0.45)]`}
          data-project={JSON.stringify(project)}
        >
          <img
            src={project.imageUrl}
            alt={project.title}
            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-90"></div>
          <div class="absolute inset-0 p-6 flex flex-col justify-between">
            <span class="text-[0.65rem] uppercase tracking-[0.3em] text-[#d7cdbb]">
              {project.category}
            </span>
            <div class="transform translate-y-6 group-hover:translate-y-0 transition-transform duration-500">
              <h3 class="text-2xl font-semibold text-white">{project.title}</h3>
              <p class="text-sm text-[#cdd7cb] mt-2">View project details</p>
            </div>
          </div>
        </button>
      ))}
    </div>
  </div>
</section>

<div
  id="portfolio-modal"
  class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4 transition-opacity duration-300 opacity-0 pointer-events-none"
  role="dialog"
  aria-modal="true"
  aria-labelledby="project-title"
>
  <div
    id="portfolio-modal-card"
    class="relative bg-[#0f1512] rounded-2xl shadow-2xl w-full max-w-4xl max-h-[90vh] overflow-y-auto flex flex-col md:flex-row transition-all duration-300 scale-95 opacity-0 border border-white/10"
  >
    <button
      type="button"
      data-modal-close
      class="absolute top-4 right-4 text-[#9da79d] hover:text-white transition-colors z-10"
      aria-label="Close project details"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <div class="md:w-3/5 flex-shrink-0 bg-[#0d1310]">
      <img
        data-modal-image
        src=""
        alt=""
        class="w-full h-full object-cover rounded-t-2xl md:rounded-l-2xl md:rounded-t-none"
      />
    </div>
    <div class="p-8 flex flex-col justify-center">
      <h2 id="project-title" data-modal-title class="text-3xl font-semibold text-white mb-2"></h2>
      <p data-modal-category class="text-[#008037] font-semibold mb-4 uppercase tracking-[0.2em] text-xs"></p>
      <p data-modal-description class="text-[#cdd7cb]"></p>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('portfolio-modal');
  const modalCard = document.getElementById('portfolio-modal-card');
  const modalImage = modal?.querySelector('[data-modal-image]');
  const modalTitle = modal?.querySelector('[data-modal-title]');
  const modalCategory = modal?.querySelector('[data-modal-category]');
  const modalDescription = modal?.querySelector('[data-modal-description]');
  const closeButtons = modal?.querySelectorAll('[data-modal-close]');

  const openModal = (project) => {
    if (!modal || !modalCard) return;
    if (modalImage) {
      modalImage.src = project.imageUrl;
      modalImage.alt = project.title;
    }
    if (modalTitle) modalTitle.textContent = project.title;
    if (modalCategory) modalCategory.textContent = project.category;
    if (modalDescription) modalDescription.textContent = project.description || '';

    modal.classList.remove('opacity-0', 'pointer-events-none');
    modal.classList.add('opacity-100');
    modalCard.classList.remove('scale-95', 'opacity-0');
    modalCard.classList.add('scale-100', 'opacity-100');
    document.body.style.overflow = 'hidden';
  };

  const closeModal = () => {
    if (!modal || !modalCard) return;
    modal.classList.add('opacity-0', 'pointer-events-none');
    modal.classList.remove('opacity-100');
    modalCard.classList.add('scale-95', 'opacity-0');
    modalCard.classList.remove('scale-100', 'opacity-100');
    document.body.style.overflow = 'unset';
  };

  document.querySelectorAll('[data-project]').forEach((item) => {
    item.addEventListener('click', () => {
      const project = JSON.parse(item.getAttribute('data-project') || '{}');
      openModal(project);
    });
  });

  if (modal) {
    modal.addEventListener('click', (event) => {
      if (event.target === modal) {
        closeModal();
      }
    });
  }

  if (closeButtons) {
    closeButtons.forEach((button) => button.addEventListener('click', closeModal));
  }

  window.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeModal();
    }
  });
</script>
