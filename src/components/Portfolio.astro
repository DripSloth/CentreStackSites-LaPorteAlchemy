---
<section id="our-work" class="section bg-neutral-900 text-white">
  <div class="container">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-8 mb-16">
      <div class="max-w-2xl reveal">
        <p class="eyebrow mb-4 text-white/70">Our Portfolio</p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white">
          Exceptional Brisbane Landscapes
        </h2>
        <p class="text-lg text-white/80 leading-relaxed">
          A curated selection of premium landscape projects showcasing our commitment to design excellence and superior craftsmanship.
        </p>
      </div>
      <a href="#contact" class="btn-primary reveal delay-1">
        Start Your Project
      </a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-[300px] md:auto-rows-[400px]">
      {projects.map((project, index) => (
        <button
          type="button"
          class={`relative overflow-hidden group cursor-pointer rounded-lg ${project.span} reveal`}
          style={`animation-delay: ${(index + 1) * 0.1}s`}
          data-project={JSON.stringify(project)}
        >
          <img
            src={project.imageUrl}
            alt={project.title}
            class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/95 via-neutral-900/50 to-transparent"></div>
          <div class="absolute inset-0 p-6 md:p-8 flex flex-col justify-between">
            <span class="text-xs uppercase tracking-wider text-white/70 mb-auto">
              {project.category}
            </span>
            <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">{project.title}</h3>
              <p class="text-sm text-white/80">View project â†’</p>
            </div>
          </div>
        </button>
      ))}
    </div>
  </div>
</section>

<div
  id="portfolio-modal"
  class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4 transition-opacity duration-300 opacity-0 pointer-events-none"
  role="dialog"
  aria-modal="true"
  aria-labelledby="project-title"
>
  <div
    id="portfolio-modal-card"
    class="relative bg-neutral-900 rounded-lg shadow-2xl w-full max-w-4xl max-h-[90vh] overflow-y-auto flex flex-col md:flex-row transition-all duration-300 scale-95 opacity-0 border border-white/10"
  >
    <button
      type="button"
      data-modal-close
      class="absolute top-4 right-4 text-white/60 hover:text-white transition-colors z-10 p-2"
      aria-label="Close project details"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <div class="md:w-3/5 flex-shrink-0 bg-neutral-800">
      <img
        data-modal-image
        src=""
        alt=""
        class="w-full h-full object-cover rounded-t-lg md:rounded-l-lg md:rounded-t-none"
      />
    </div>
    <div class="p-8 flex flex-col justify-center">
      <h2 id="project-title" data-modal-title class="text-3xl font-bold text-white mb-3"></h2>
      <p data-modal-category class="font-semibold mb-4 uppercase tracking-wider text-xs" style="color: #008037;"></p>
      <p data-modal-description class="text-white/80 leading-relaxed"></p>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('portfolio-modal');
  const modalCard = document.getElementById('portfolio-modal-card');
  const modalImage = modal?.querySelector('[data-modal-image]');
  const modalTitle = modal?.querySelector('[data-modal-title]');
  const modalCategory = modal?.querySelector('[data-modal-category]');
  const modalDescription = modal?.querySelector('[data-modal-description]');
  const closeButtons = modal?.querySelectorAll('[data-modal-close]');

  const openModal = (project) => {
    if (!modal || !modalCard) return;
    if (modalImage) {
      modalImage.src = project.imageUrl;
      modalImage.alt = project.title;
    }
    if (modalTitle) modalTitle.textContent = project.title;
    if (modalCategory) modalCategory.textContent = project.category;
    if (modalDescription) modalDescription.textContent = project.description || '';

    modal.classList.remove('opacity-0', 'pointer-events-none');
    modal.classList.add('opacity-100');
    modalCard.classList.remove('scale-95', 'opacity-0');
    modalCard.classList.add('scale-100', 'opacity-100');
    document.body.style.overflow = 'hidden';
  };

  const closeModal = () => {
    if (!modal || !modalCard) return;
    modal.classList.add('opacity-0', 'pointer-events-none');
    modal.classList.remove('opacity-100');
    modalCard.classList.add('scale-95', 'opacity-0');
    modalCard.classList.remove('scale-100', 'opacity-100');
    document.body.style.overflow = 'unset';
  };

  document.querySelectorAll('[data-project]').forEach((item) => {
    item.addEventListener('click', () => {
      const project = JSON.parse(item.getAttribute('data-project') || '{}');
      openModal(project);
    });
  });

  if (modal) {
    modal.addEventListener('click', (event) => {
      if (event.target === modal) {
        closeModal();
      }
    });
  }

  if (closeButtons) {
    closeButtons.forEach((button) => button.addEventListener('click', closeModal));
  }

  window.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeModal();
    }
  });
</script>
