<section id="contact" class="py-20 md:py-32 bg-gray-900">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold font-serif text-white mb-4">
          Ready to Create Your Legacy Garden?
        </h2>
        <p class="text-lg text-gray-300 mb-10">
          We partner with a select number of clients each year to ensure our highest standards are met on every project. Reach out to begin the conversation about your property.
        </p>
      </div>
  
      <div
        data-contact-success
        class="hidden text-center max-w-xl mx-auto bg-green-900/50 border border-green-700 text-green-200 px-6 py-8 rounded-lg"
      >
        <h3 class="text-2xl font-bold font-serif mb-2">Thank You!</h3>
        <p>Your message has been sent successfully. We will be in touch with you shortly.</p>
      </div>
  
      <form data-contact-form class="max-w-xl mx-auto mt-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label for="name" class="block text-gray-400 text-sm font-bold mb-2 text-left">
              Full Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-gray-800 border border-gray-700 rounded-md py-3 px-4 text-gray-200 focus:outline-none focus:ring-2 focus:ring-green-600 focus:border-transparent transition duration-300"
            />
          </div>
          <div>
            <label for="email" class="block text-gray-400 text-sm font-bold mb-2 text-left">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-gray-800 border border-gray-700 rounded-md py-3 px-4 text-gray-200 focus:outline-none focus:ring-2 focus:ring-green-600 focus:border-transparent transition duration-300"
            />
          </div>
        </div>
        <div class="mb-6">
          <label for="phone" class="block text-gray-400 text-sm font-bold mb-2 text-left">
            Phone Number <span class="text-xs font-normal text-gray-500">(Optional)</span>
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full bg-gray-800 border border-gray-700 rounded-md py-3 px-4 text-gray-200 focus:outline-none focus:ring-2 focus:ring-green-600 focus:border-transparent transition duration-300"
          />
        </div>
        <div class="mb-6">
          <label for="message" class="block text-gray-400 text-sm font-bold mb-2 text-left">
            Tell us about your project
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full bg-gray-800 border border-gray-700 rounded-md py-3 px-4 text-gray-200 focus:outline-none focus:ring-2 focus:ring-green-600 focus:border-transparent transition duration-300"
          ></textarea>
        </div>
        <div class="text-center">
          <button
            type="submit"
            data-contact-button
            class="bg-green-800 text-white font-bold py-3 px-10 rounded-full hover:bg-green-700 transition-all duration-300 transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Book a Consultation
          </button>
        </div>
      </form>
    </div>
  </section>
  
  <script>
    const form = document.querySelector('[data-contact-form]');
    const successPanel = document.querySelector('[data-contact-success]');
    const submitButton = document.querySelector('[data-contact-button]');
  
    if (form && successPanel && submitButton) {
      form.addEventListener('submit', (event) => {
        event.preventDefault();
  
        const formData = new FormData(form);
        const payload = Object.fromEntries(formData.entries());
        console.log('Form submitted:', payload);
  
        submitButton.setAttribute('disabled', 'true');
        submitButton.textContent = 'Sending...';
  
        window.setTimeout(() => {
          form.classList.add('hidden');
          successPanel.classList.remove('hidden');
        }, 2000);
      });
    }
  </script>