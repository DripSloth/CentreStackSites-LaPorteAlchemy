<section id="contact" class="relative py-20 md:py-32 bg-[#0d1310] text-[#f4f1e8] overflow-hidden">
  <div class="absolute -top-20 right-0 h-80 w-80 rounded-full bg-[#008037]/30 blur-[140px]"></div>
  <div class="lux-container grid gap-14 lg:grid-cols-[1.05fr_0.95fr] items-start">
    <div class="space-y-6">
      <p class="eyebrow text-[#d7cdbb]">Private consultations</p>
      <h2 class="text-4xl md:text-5xl font-semibold">Ready to craft your estate landscape?</h2>
      <p class="text-lg text-[#cdd7cb]">
        We accept a limited number of Carina Heights and Brisbane projects per season to maintain our level of finish.
        Share your vision and we will respond with a tailored consultation.
      </p>
      <div class="glass-panel rounded-2xl p-6 space-y-3 text-sm uppercase tracking-[0.26em] text-[#d7cdbb]">
        <p>Design studio based in Carina Heights</p>
        <p>On-site consultations by appointment</p>
        <p>Concierge-level project management</p>
      </div>
    </div>

    <div>
      <div
        data-contact-success
        class="hidden text-center bg-[#0f1512] border border-[#008037]/40 text-[#dce7da] px-6 py-8 rounded-2xl"
      >
        <h3 class="text-2xl font-semibold mb-2">Thank you!</h3>
        <p>Your message has been sent successfully. We will be in touch shortly.</p>
      </div>

      <form data-contact-form class="bg-[#f4f1e8] text-[#0f1512] rounded-3xl p-8 shadow-[0_30px_70px_rgba(5,10,7,0.35)] border border-white/60">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label for="name" class="block text-xs uppercase tracking-[0.3em] text-[#6b6252] mb-2">
              Full Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-white/70 border border-[#0f1512]/10 rounded-md py-3 px-4 text-[#1b1f1c] focus:outline-none focus:ring-2 focus:ring-[#008037] focus:border-transparent transition duration-300"
            />
          </div>
          <div>
            <label for="email" class="block text-xs uppercase tracking-[0.3em] text-[#6b6252] mb-2">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-white/70 border border-[#0f1512]/10 rounded-md py-3 px-4 text-[#1b1f1c] focus:outline-none focus:ring-2 focus:ring-[#008037] focus:border-transparent transition duration-300"
            />
          </div>
        </div>
        <div class="mb-6">
          <label for="phone" class="block text-xs uppercase tracking-[0.3em] text-[#6b6252] mb-2">
            Phone Number <span class="text-[0.6rem] font-normal text-[#8b8272]">(Optional)</span>
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full bg-white/70 border border-[#0f1512]/10 rounded-md py-3 px-4 text-[#1b1f1c] focus:outline-none focus:ring-2 focus:ring-[#008037] focus:border-transparent transition duration-300"
          />
        </div>
        <div class="mb-6">
          <label for="message" class="block text-xs uppercase tracking-[0.3em] text-[#6b6252] mb-2">
            Tell us about your project
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full bg-white/70 border border-[#0f1512]/10 rounded-md py-3 px-4 text-[#1b1f1c] focus:outline-none focus:ring-2 focus:ring-[#008037] focus:border-transparent transition duration-300"
          ></textarea>
        </div>
        <div class="text-left">
          <button
            type="submit"
            data-contact-button
            class="btn-primary text-xs font-semibold uppercase tracking-[0.28em] px-8 py-4 rounded-full transition-transform duration-300 hover:translate-y-[-2px] disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Book a Consultation
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
  
  <script>
    const form = document.querySelector('[data-contact-form]');
    const successPanel = document.querySelector('[data-contact-success]');
    const submitButton = document.querySelector('[data-contact-button]');
  
    if (form && successPanel && submitButton) {
      form.addEventListener('submit', (event) => {
        event.preventDefault();
  
        const formData = new FormData(form);
        const payload = Object.fromEntries(formData.entries());
        console.log('Form submitted:', payload);
  
        submitButton.setAttribute('disabled', 'true');
        submitButton.textContent = 'Sending...';
  
        window.setTimeout(() => {
          form.classList.add('hidden');
          successPanel.classList.remove('hidden');
        }, 2000);
      });
    }
  </script>
