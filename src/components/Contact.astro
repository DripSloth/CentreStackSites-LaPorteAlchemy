<section id="contact" class="section bg-neutral-900 text-white">
  <div class="container">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <div class="reveal">
        <p class="eyebrow mb-4 text-white/70">Get In Touch</p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white">
          Start Your Landscape Journey
        </h2>
        <p class="text-lg text-white/80 leading-relaxed mb-8">
          We work with a select number of Brisbane clients each year to ensure every project receives the attention and quality it deserves. Share your vision and we'll respond with a tailored consultation.
        </p>
        <div class="bg-white/5 backdrop-blur-sm p-6 rounded-lg border border-white/10 space-y-4">
          <div class="flex items-start gap-4">
            <svg class="w-5 h-5 mt-1 flex-shrink-0" style="color: #008037;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <p class="text-sm uppercase tracking-wider text-white/70 mb-1">Location</p>
              <p class="text-white">Brisbane, Queensland</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <svg class="w-5 h-5 mt-1 flex-shrink-0" style="color: #008037;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div>
              <p class="text-sm uppercase tracking-wider text-white/70 mb-1">Email</p>
              <p class="text-white">hello@laportealchemy.com</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <svg class="w-5 h-5 mt-1 flex-shrink-0" style="color: #008037;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-sm uppercase tracking-wider text-white/70 mb-1">Consultations</p>
              <p class="text-white">By appointment only</p>
            </div>
          </div>
        </div>
      </div>

      <div class="reveal delay-1">
        <div
          data-contact-success
          class="hidden text-center bg-white/5 backdrop-blur-sm border border-white/10 text-white px-8 py-12 rounded-lg"
        >
          <h3 class="text-2xl font-bold mb-3">Thank You!</h3>
          <p class="text-white/80">Your message has been sent successfully. We will be in touch shortly.</p>
        </div>

        <form data-contact-form class="bg-white text-neutral-900 rounded-lg p-8 shadow-xl">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="name" class="block text-sm font-semibold uppercase tracking-wider mb-2 text-neutral-700">
                Full Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-neutral-50 border border-neutral-200 rounded px-4 py-3 text-neutral-900 focus:outline-none focus:border-transparent transition duration-300"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-semibold uppercase tracking-wider mb-2 text-neutral-700">
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full bg-neutral-50 border border-neutral-200 rounded px-4 py-3 text-neutral-900 focus:outline-none focus:border-transparent transition duration-300"
              />
            </div>
          </div>
          <div class="mb-6">
            <label for="phone" class="block text-sm font-semibold uppercase tracking-wider mb-2 text-neutral-700">
              Phone Number <span class="text-xs font-normal text-neutral-500 normal-case">(Optional)</span>
            </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full bg-neutral-50 border border-neutral-200 rounded px-4 py-3 text-neutral-900 focus:outline-none focus:border-transparent transition duration-300"
              />
          </div>
          <div class="mb-6">
            <label for="message" class="block text-sm font-semibold uppercase tracking-wider mb-2 text-neutral-700">
              Tell us about your project
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full bg-neutral-50 border border-neutral-200 rounded px-4 py-3 text-neutral-900 focus:outline-none focus:border-transparent transition duration-300 resize-none"
            ></textarea>
          </div>
          <button
            type="submit"
            data-contact-button
            class="btn-primary w-full disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Submit Enquiry
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
  
<script>
  const form = document.querySelector('[data-contact-form]');
  const successPanel = document.querySelector('[data-contact-success]');
  const submitButton = document.querySelector('[data-contact-button]');

  if (form && successPanel && submitButton) {
    form.addEventListener('submit', (event) => {
      event.preventDefault();

      const formData = new FormData(form);
      const payload = Object.fromEntries(formData.entries());
      console.log('Form submitted:', payload);

      submitButton.setAttribute('disabled', 'true');
      submitButton.textContent = 'Sending...';

      window.setTimeout(() => {
        form.classList.add('hidden');
        successPanel.classList.remove('hidden');
      }, 2000);
    });
  }
</script>
